<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main class="container">
        <form  action="<% if (editing) { %> 
            /admin/edit-product <% } else { %>/admin/add-product<% }%>" method="POST">
            <h2 class="form-header"> <% if (editing) { %>
            update product
            <%  } else {%>
                add product
                <%}%>
            </h2>
            <div class="heading-line"></div>
            <div class="form-control">                
                <input type="text" name="title" id="title"  value="<% if (editing) { %><%= product.title %><%  }%>" placeholder="title">
            </div>
            <div class="form-control">
                <input type="text" name="imageUrl" id="imageUrl"  value="<% if (editing) { %><%= product.imageUrl %><%  }%>" placeholder="imageUrl">
            </div>
            <div class="form-control">
                <input type="number" name="price" id="price" step="0.01" value="<% if (editing) { %><%= product.price %><%  }%>" placeholder="price">
            </div>
            <div class="form-control">
                <textarea  cols="1" rows="8" name="description" id="description" rows="5" placeholder="description"><% if (!editing) { %><%  }else{ %><%= product.description %> <%  } %></textarea>
            </div>
            <button class="btn" type="submit">
                <% if (editing) { %>
                    <input type="hidden" value="<%= product.id %>" name="productId">
                    Update Product
              <%  } else {%>
                    Add Product
                    <%}%>
            </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>




